// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Intent {
  id         Int      @id @default(autoincrement())
  explorerId Int      
  personId   Int      
  intent     Int      
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Person {
  id            Int      @id @default(autoincrement())
  name          String   
  earthoneLink  String   
  organisation  String   
  title         String   
  location      String   
  website       String   
  instagramLink String   
  linkedinLink  String   
  nationality   String   
  bio           String   
  offer         String   
  need          String   
  action        String   
  guild         String   
  earthoneRole  String   
  points        Int      
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}